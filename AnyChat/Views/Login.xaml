<Window x:Class="AnyChat.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:AnyChat.ViewModel"
        xmlns:local="clr-namespace:AnyChat.Views"
        mc:Ignorable="d"
        FontFamily="Monospace"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Style="{StaticResource MaterialDesignWindow}"
        Background="{x:Null}"
        Title="MainWindow" Height="500" Width="350"
        MouseDown="Window_MouseDown">
    <md:Card UniformCornerRadius="20">
        <md:Card.DataContext>
            <vm:LoginViewModel />
        </md:Card.DataContext>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" FlowDirection="RightToLeft"
                        Orientation="Horizontal">
                <Button Width="Auto"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="CloseButtonClick">
                    <md:PackIcon Kind="CloseBold" />
                </Button>
                
                <Button Width="Auto"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="RegisterButtonClick">
                    <md:PackIcon Kind="Register" />
                </Button>
                
            </StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30px"
                           FontFamily="Cascadia Code"
                           Margin="0,30"
                           Text="Any Chat" />

                <Grid Grid.Row="1" Height="Auto">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0"
                           Grid.ColumnSpan="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="Purple"
                           FontSize="32px"
                           Margin="0,20"
                           Content="Login"/>

                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Content="Username"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           FontSize="20"/>

                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Height="Auto"
                             Padding="5"
                             FontSize="20"
                             md:HintAssist.Hint="Enter username"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Margin="10"/>

                    <Label Grid.Row="2"
                           Grid.Column="0"
                           Content="Password"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           FontSize="20"/>

                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Height="Auto"
                             Padding="5"
                             FontSize="20"
                             md:HintAssist.Hint="Enter password"
                             Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                             Margin="10" />

                    <Button Grid.ColumnSpan="2"
                            Grid.Row="3"
                            VerticalAlignment="Top"
                            md:ButtonAssist.CornerRadius="5"
                            FontSize="18"
                            Margin="5,35,5,0"
                            Content="Login"
                            Command="{Binding LoginButtonCommand}" />

                    <TextBlock Grid.Row="4"
                               Grid.ColumnSpan="2"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="18"
                               Foreground="DarkRed"
                               Text="{Binding ErrorMessage}" />

                </Grid>
            </Grid>
        </DockPanel>
    </md:Card>
</Window>
